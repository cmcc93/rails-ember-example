<h2>car new template: {{title}}</h2>
<form>
  engine: {{view Ember.TextField valueBinding="controller.engine"}}
  {{controller.validationErrors.engine.messages}}<br />
  year: {{view Ember.TextField valueBinding="controller.year"}}
  {{controller.validationErrors.year.messages}}<br />
  modelName: {{view Ember.TextField valueBinding="controller.modelName"}}
  {{controller.validationErrors.modelName.messages}}<br />
  color: {{view Ember.TextField valueBinding="controller.color"}}
  {{controller.validationErrors.color.messages}}<br />
  <button {{action "submit" controller}}>Submit</button>
</form>
